{
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "tabWidth": 2,
  "printWidth": 100,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.json", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
